{
  "name": "@eightshapes/esds-button",
  "version": "0.4.0",
  "description": "",
  "esnext": "dist/EsdsButton.js",
  "main": "dist/esds-button-web-component.js",
  "module": "dist/EsdsButton.js",
  "scripts": {
    "start": "npm-run-all build --parallel watch:build start:storybook",
    "start:watch-dependencies": "npm-run-all --parallel start watch:build-visual-style-dependency watch:build-tokens watch:build-token-dependency",
    "start:storybook": "npm run --prefix ../../test/storybook start",
    "start:debug-environment": "npm-run-all build --parallel watch:build start:browsersync",
    "start:browsersync": "browser-sync start --watch --config browser-sync-config.js --ignore 'src/**/*'",
    "clean:dist": "npx trash dist/**/*",
    "build": "npm-run-all clean:dist build:styles build:esm build:web-component --parallel build:jsdoc",
    "build:web-component": "npx esbuild --bundle src/esds-button-entry.js --outfile=dist/esds-button-web-component.js --format=esm",
    "build:esm": "npx esbuild --bundle src/EsdsButton.js --outfile=dist/EsdsButton.js --format=esm",
    "build:styles": "node scripts/scss-to-lit.js",
    "watch:build": "npm-run-all --parallel watch:build-esm watch:build-web-component watch:build-styles watch:build-jsdoc",
    "watch:build-esm": "chokidar \"src/EsdsButton.js\" -c \"npm run build:esm\"",
    "watch:build-web-component": "chokidar \"src/**/*.js\" -c \"npm run build:web-component\"",
    "watch:build-styles": "chokidar \"src/**/*.scss\" -c \"npm run build:styles\"",
    "watch:build-visual-style-dependency": "chokidar \"../../esds-visual-style/src/**/*.scss\" -c \"npm run build:styles\"",
    "watch:build-token-dependency": "chokidar \"../../esds-tokens/dist/**/*.scss\" -c \"npm run build:styles\"",
    "watch:build-tokens": "npm run --prefix ../../esds-tokens start",
    "build:jsdoc": "npx web-component-analyzer src/EsdsButton.js --format json --outFile documentation/esds-button-docs.json && npx web-component-analyzer src/EsdsButton.js --format markdown --outFile documentation/esds-button-docs.md",
    "watch:build-jsdoc": "chokidar \"src/**/*.js\" -c \"npm run build:jsdoc\"",
    "prepack": "npm run build",
    "test": "karma start",
    "test:watch": "npm-run-all --parallel watch:build karma:watch",
    "karma:watch": "karma start --auto-watch=true --single-run=false",
    "test:vrt": "npm run --prefix ../../test/storybook test"
  },
  "license": "MIT",
  "devDependencies": {
    "@eightshapes/esds-tokens": "^0.6.0",
    "@eightshapes/esds-visual-style": "^0.6.1",
    "@eightshapes/scopify": "^0.1.0",
    "@eightshapes/slotify": "^0.6.1",
    "@open-wc/testing": "^2.0.0",
    "@open-wc/testing-karma": "^3.0.0",
    "autoprefixer": "^9.7.4",
    "browser-sync": "^2.26.7",
    "chokidar-cli": "^2.1.0",
    "deepmerge": "^3.2.0",
    "esbuild": "^0.6.27",
    "npm-run-all": "^4.1.5",
    "postcss": "^7.0.26",
    "regenerator-runtime": "^0.13.3",
    "rollup": "^1.18.0",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-node-resolve": "^5.2.0",
    "sass": "^1.25.0",
    "sinon": "^9.0.3",
    "trash-cli": "^3.0.0",
    "web-component-analyzer": "1.0.3"
  },
  "dependencies": {
    "@eightshapes/css-classify": "^0.1.2",
    "lit-element": "^2.2.1",
    "lit-html": "^1.1.2"
  },
  "gitHead": "fc702e9012c10e169f433014bd9400035e4d59c5"
}
